<view class='pa-30'>

  <view class='bz' wx:if="{{show || isUpdate}}">
    <view style='height:60rpx'>
      <view class="avatar">
        <open-data type="userAvatarUrl" mode="aspectFill"></open-data>
      </view>
    </view>
    <form bindsubmit="formSubmit" report-submit="true">

      <view class='panel-between border-b pa-t30 pa-b10 '>
        <view class='fo-28 bold'>电话号码:</view>
        <input class='text-right fo-28' name='name'  data-type='name' bindinput="complete" value="{{name}}"   placeholder=''></input>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10'>
        <view class='fo-28 bold'>短信验证码:</view>
        <input class='text-right fo-28' type='number' data-type='code' bindinput="complete" value="{{code}}" placeholder='请输入短信验证码'></input>
        <button class="submit-code" disabled="{{disabled}}" bindtap="PhoneCode">{{text}}</button>
      </view>
      <view class='panel-between border-b pa-t30 pa-b10'>
        <view class='fo-28 bold'>密码:</view>
        <input class='text-right fo-28' type='password' data-type='pw1' bindinput="complete" value="{{pw1}}" placeholder=''></input>
      </view>
       <view class='panel-between border-b pa-t30 pa-b10'>
        <view class='fo-28 bold'>密码确认:</view>
        <input class='text-right fo-28' type='password' data-type='pw2' bindinput="complete" value="{{pw2}}" placeholder=''></input>
      </view>
      
